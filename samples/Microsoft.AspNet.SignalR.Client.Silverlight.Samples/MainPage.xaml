<UserControl x:Class="Microsoft.AspNet.SignalR.Client.Silverlight.Samples.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="700" d:DesignWidth="1200">

    <Grid x:Name="LayoutRoot" Background="White">
        <ScrollViewer Height="700" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBox IsReadOnly="True" Name="Messages" TextWrapping="Wrap" FontSize="10"/>
        </ScrollViewer>
    </Grid>
</UserControl>
